<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:background="@drawable/coner_bg_white"
    android:minHeight="150dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/setupPasswordTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="8dp"
        android:text="设置密码"
        android:textColor="#1abde6"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginBottom="10dp"
        android:background="#1abde6"/>

    <EditText
        android:id="@+id/firstPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/edit_normal_bg"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#99a3a3a3"/>

    <EditText
        android:id="@+id/secondConfirmPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/edit_normal_bg"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="#99a3a3a3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#1abde6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/setupPasswordOkButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="确认"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="#1abde6"/>

        <Button
            android:id="@+id/setupPasswordCancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="取消"/>
    </LinearLayout>

</LinearLayout>